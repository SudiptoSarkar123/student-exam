<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Examinees</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">List of Examinees</h1>
        <!-- Add your content here -->


        <div>
            <!-- Header Section -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Exam List</h2>
                <h5>Total Examination: <span id="totalStudents"><%=exams.length%></span></h5>
            </div>
            
            <!-- Action Buttons -->
            <div class="d-flex justify-content-between mb-3">
                <!-- <button class="btn btn-danger" id="deleteSelected">Delete</button> -->
                <a href="/admin/add-exams"  class="btn btn-primary" id="addExams">Add Exams</a>
            </div>

            <!-- Exams Table -->
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="table-dark">
                        <tr>
                            <!-- <th><input type="checkbox" id="selectAll"></th> -->
                            <th>Name</th>
                            <th>Subject</th>
                            <th>Duration</th>
                            <th>Total Marks</th>
                            <th>Start Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="examTableBody">
                        <!-- Dynamic rows will be inserted here -->
                        <% if(exams.length> 0){ %>
                            <% exams.forEach(exam=> { %>
                                <tr>
                                    <!-- <td><input type="checkbox" class="studentCheckbox"></td> -->
                                    <td>
                                        <%= exam.name %>
                                    </td>
                                    <td>
                                        <%= exam.subject %>
                                    </td>
                                    <td>
                                        <%= exam.duration %>
                                    </td>
                                    <td>
                                        <%= exam.totalMarks %>
                                    </td>
                                    <td>
                                        <%= exam.startDate %>
                                    </td>
                                    <td>
                                       <a href="/admin/edit-exam-form/<%= exam._id %>" class="btn btn-warning">Edit</a>
                                       <a href="/admin/delete-exam/<%=exam._id %>" class="btn btn-danger">Delete</a>
                                    </td>

                                </tr>
                                <% });}else{ %>
                                    <h2>No exams found...</h2>
                                    <% } %>

                    </tbody>
                </table>
            </div>
        </div>

    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
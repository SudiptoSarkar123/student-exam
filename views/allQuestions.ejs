<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Questions</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Questions List</h1>
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Exam</th>
                        <th>Question</th>
                        <th>Options</th>
                        <th>Correct Answer</th>
                        <th>Marks</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (questions.length > 0) { %>
                        <% questions.forEach((question, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= question.exam.name %></td>
                                <td><%= question.questionText %></td>
                                <td>
                                    <ul>
                                        <% question.options.forEach(option => { %>
                                            <li><%= option %></li>
                                        <% }); %>
                                    </ul>
                                </td>
                                <td><%= question.correctAnswer %></td>
                                <td><%= question.marks %></td>
                                <td>
                                    <a href="/admin/edit-question/<%= question._id %>" class="btn btn-warning btn-sm">Edit</a>
                                    <a href="/admin/delete-question/<%= question._id %>" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="5" class="text-center">No questions found...</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
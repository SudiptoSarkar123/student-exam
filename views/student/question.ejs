<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Question <%= qIndex + 1 %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .sidebar {
      background-color: #343a40;
      color: white;
      height: 100vh;
    }
    .sidebar h5 {
      color: #ffc107;
    }
    .sidebar .nav-link {
      color: white;
    }
    .sidebar .nav-link:hover {
      background-color: #495057;
      color: #ffc107;
    }
    .sidebar .nav-link.fw-bold {
      background-color: #ffc107;
      color: #343a40;
    }
    .card {
      border: none;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .form-check-input:checked {
      background-color: #0d6efd;
      border-color: #0d6efd;
    }
    .btn-primary {
      background-color: #0d6efd;
      border-color: #0d6efd;
    }
    .btn-primary:hover {
      background-color: #0056b3;
      border-color: #004085;
    }
  </style>
</head>
<body>

<div class="container-fluid">
  <div class="row">
    
    <!-- Sidebar -->
    <nav class="col-md-3 col-lg-2 d-md-block sidebar py-4">
      <div class="position-sticky">
        <h5 class="px-3">Questions</h5>
        <ul class="nav flex-column">
          <% for(let i = 0; i < totalQuestions; i++) { %>
            <li class="nav-item">
              <a href="/student/exam/<%= examId %>/question/<%= i %>" 
                 class="nav-link <%= i === qIndex ? 'fw-bold' : '' %>">
                Q<%= i + 1 %>
              </a>
            </li>
          <% } %>
        </ul>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title mb-3 text-primary">Question <%= qIndex + 1 %> of <%= totalQuestions %></h4>
          <p class="card-text fs-5"><%= question.questionText %></p>

          <form action="/student/exam/<%= examId %>/save/<%= qIndex %>" method="POST">
            <input type="hidden" id="qId" name="qId" value="<%= question._id %>">
            <% question.options.forEach(option => { %>
              <div class="form-check mb-3"> 
                <input class="form-check-input" type="radio" name="answer" value="<%= option %>" id="<%= option %>" required>
                <label class="form-check-label fs-5" for="<%= option %>">
                  <%= option %>
                </label>
              </div>
            <% }) %>

            <div class="d-flex justify-content-between mt-4">
              <% if (qIndex > 0) { %>
                <a class="btn btn-secondary" href="/student/exam/<%= examId %>/question/<%= qIndex - 1 %>">Previous</a>
              <% } %>
              <% if (qIndex === totalQuestions - 1) { %>
                <button type="submit" class="btn btn-success">Submit</button>
              <% } else { %>
                <a class="btn btn-primary" href="/student/exam/<%= examId %>/question/<%= qIndex + 1 %>">Next</a>
              <% } %>
            </div>
          </form>
        </div>
      </div>
    </main>

  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>